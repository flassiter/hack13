{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Workflow": {
    "Directory": "configs/workflows",
    "EnvironmentSettings": {
      "host": "localhost",
      "screen_catalog_path": "configs/screen-catalog",
      "user_id": "TESTUSER",
      "password": "TEST1234",
      "customer_email": "demo@example.com"
    }
  },
  "EmailSender": {
    "template_base_path": "configs/templates",
    "attachment_size_limit_bytes": 10485760,
    "transport": {
      "type": "mock",
      "smtp": {
        "host": "localhost",
        "port": 25,
        "use_ssl": false
      },
      "ses": {
        "region": "us-east-1",
        "max_retries": 3
      }
    }
  },
  "AllowedHosts": "*"
}
